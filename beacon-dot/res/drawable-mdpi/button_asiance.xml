<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#a63049" />
            
            <corners android:radius="4dp" />			
            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/asianceGrey" />

            <corners android:radius="4dp" />			
            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape>
    </item>
     <item>
        <shape>
            <solid android:color="@color/asianceColor" />

            <corners android:radius="4dp" />			
            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape>
    </item>
</selector>